<div class="container p-4">
    <h1 class="text-center">Noticias</h1>
    <div class="row">
        {{#each listas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="/listas/descriptions/{{id}}">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p class="m-2">{{categoria}}</p>
                    <div class="m-2">
                        <img class="img-size rounded" src="../uploads/{{imagenes}}"  alt="">
                    </div>
                </div>
            </div>
            <br>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>Aun no hay noticias.</p>
                <a href="/noticias/add">Crea Una!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>