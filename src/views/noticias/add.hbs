<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/noticias/add" method="POST" encType="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                        </div>
                        <!--<div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="URL">
                        </div>-->
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <select class="form-control" id="categorias_id" name="categorias_id" required>
                                <option value="">Seleccionar</option>
                                <option value="1">Deportes</option>
                                <option value="2">Tecnologia</option>
                                <option value="3">Arte</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="file" name="sampleFile" required style="width:300px; border: 1px solid #ccc;">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>